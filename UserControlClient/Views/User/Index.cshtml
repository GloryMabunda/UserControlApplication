@model IEnumerable<UserControlAPI.Models.Users>

@{
    ViewData["Title"] = "Index";
}

<h1>User Listing</h1>

@{
    var msg = ViewBag.Msg;
    var msgType = ViewBag.MsgType;
}

@if (!string.IsNullOrEmpty(msg))
{
    <div class="alert alert-@msgType alert-dismissible fade show" role="alert">
        <strong>@msg</strong>
  @*       <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button> *@
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UsertId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UsertId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.UsertId  }) |
                @Html.ActionLink("Details", "Details", new {  id=item.UsertId }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.UsertId  })
            </td>
        </tr>
        }
    </tbody>
</table>
